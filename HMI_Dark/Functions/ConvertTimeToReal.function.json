        "waitMode": "Synchronous",
        "category": "HMI_Dark|Data Conversion",
        "returnValue": {
            "type": "tchmi:general#/definitions/REAL",
            "description": "Valor convertido em segundos (ponto flutuante)"
        },
        "visible": true,
        "injectContextObject": false,
        "arguments": [
            {
                "name": "iSensorShow",
                "displayName": "Sensor Show Index",
                "type": "tchmi:general#/definitions/INT",
                "description": "Índice do sensor a exibir (0 = timeValue0, 1 = timeValue1)",
                "defaultValue": "0",
                "required": false,
                "bindable": true,
                "restParameter": false,
                "asReference": false,
                "allowControlAttributeBindingOptions": false
            },
            {
                "name": "timeValue0",
                "displayName": "TIME Value 0 (ms)",
                "type": "tchmi:general#/definitions/TIME",
                "description": "Valor TIME do sensor 0 em milissegundos (ex: 5000 para T#5s)",
                "defaultValue": null,
                "required": false,
                "bindable": true,
                "restParameter": false,
                "asReference": false,
                "allowControlAttributeBindingOptions": false
            },
            {
                "name": "timeValue1",
                "displayName": "TIME Value 1 (ms)",
                "type": "tchmi:general#/definitions/TIME",
                "description": "Valor TIME do sensor 1 em milissegundos (ex: 5000 para T#5s)",
                "defaultValue": null,
                "required": false,
                "bindable": true,
                "restParameter": false,
                "asReference": false,
                "allowControlAttributeBindingOptions": false
            },
            {
                "name": "decimalPlaces",
                "displayName": "Decimal Places",
                "type": "tchmi:general#/definitions/INT",
                "description": "Número de casas decimais no resultado (0-10)",
                "defaultValue": "3",
                "required": false,
                "bindable": true,
                "restParameter": false,
                "asReference": false,
                "allowControlAttributeBindingOptions": false
            }
        ]
    },
